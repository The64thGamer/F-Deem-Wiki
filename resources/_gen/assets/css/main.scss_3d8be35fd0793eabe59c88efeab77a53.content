.navbar{display:flex;justify-content:space-between;align-items:center;padding:10px 20px;background-color:#333;color:#fff}.navbar a{color:#fff;text-decoration:none}.navbar-menu{display:flex;list-style:none;margin:0;padding:0}.navbar-item{position:relative;margin:0 10px}.dropdown-menu{display:none;position:absolute;top:100%;left:0;background-color:#444;list-style:none;margin:0;padding:10px 0;box-shadow:0 2px 5px rgba(0,0,0,0.2)}.dropdown-menu li{padding:5px 20px}.dropdown-menu li a{color:#fff}.navbar-item:hover .dropdown-menu{display:block}.container{display:flex;width:100%;justify-content:start;align-items:center}.post-grid{display:flex;flex-wrap:wrap;gap:20px}.post-item{width:200px;text-align:center}.post-thumbnail img{width:100%;height:auto;border-radius:8px;box-shadow:0 2px 5px rgba(0,0,0,0.1)}.post-title{margin-top:10px;font-size:1rem;font-weight:bold}.post-title a{text-decoration:none;color:#333}.post-title a:hover{text-decoration:underline}
